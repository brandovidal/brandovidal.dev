---
interface Props {
  title: string;
  company: string;
  description: string;
  date: string;
  link?: string;
}
const { title, company, description, date, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-purple-500 bg-purple-400"
>
</div>
<time
  class="text-sm font-normal leading-none text-gray-400 dark:text-gray-500 mt-1"
  >{date}
</time>
<h3 class="text-lg font-semibold text-purple-500/80 dark:text-purple-300/80">
  {title}
</h3>
<h5 class="text-lg font-medium text-gray-600 dark:text-gray-300">
  {company}
</h5>
<p class="mb-0 text-base font-normal text-gray-600 dark:text-gray-400 text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex w-24 py-3 text-sm font-normal underline text-purple-400 dark:text-purple-200 hover:text-purple-400 transition-colors duration-300"
      target="_blank"
      rel="noopener noreferrer"
    >
      Saber m&aacute;s{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
