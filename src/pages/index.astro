    <SectionContainer id="projects">
      <h2 class="flex gap-x-2 text-2xl font-bold mb-6">
        <CodeIcon />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer id="resume">
      <h2 class="flex gap-x-2 text-2xl font-bold mb-6">
        <PersonIcon />
        Sobre mi
