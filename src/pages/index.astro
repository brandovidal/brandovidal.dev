---
import Layout from "../layouts/Layout.astro";

import Resume from "../sections/resume/resume.astro";
import Experience from "../sections/experience/Experience.astro";
import Project from "../sections/project/Project.astro";
import About from "../sections/about/About.astro";

import SectionContainer from "../components/SectionContainer.astro";

import GitMergeIcon from "../icons/GitMergeIcon.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import PersonIcon from "../icons/PersonIcon.astro";
---

<Layout
  title="Brando Vidal - AWS Developer Associate | Fullstack Developer"
  description="Contacta conmigo para desarrollar tu idea."
>
  <main class="px-4 sm:px-8">
    <SectionContainer id="resume" class="py-32">
      <Resume />
    </SectionContainer>

    <SectionContainer id="experience">
      <h2 class="flex gap-x-2 text-2xl font-bold mb-6">
        <GitMergeIcon />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="projects">
      <h2 class="flex gap-x-2 text-2xl font-bold mb-6">
        <CodeIcon />
        Proyectos
      </h2>
      <Project />
    </SectionContainer>
    <SectionContainer id="about-me">
      <h2 class="flex gap-x-2 text-2xl font-bold mb-6">
        <PersonIcon />
        Sobre mi
      </h2>

      <About />
    </SectionContainer>
  </main>
</Layout>
