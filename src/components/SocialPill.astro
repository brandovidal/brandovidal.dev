---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a
  class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 lg:py-2 px-2 lg:px-4 text-sm md:text-base bg-white/5 hover:scale-110 transition-"
  href={href}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
